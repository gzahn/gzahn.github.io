# find Nucleotide fastas for a list of organisms
while read -u3 line; do esearch -db nuccore -query "\"$line\"" | efetch -format fasta; done 3< list_of_taxa.txt
# note the -u3 and 3< ... edirect is contacting a server so stdin is wasted after first line



# find all insulin protein AA sequences
esearch -db protein -query "\"insulin\"[Protein Name]" | efetch -format fasta

# find all plant protein AA sequences linked to papers with the keyword "rubisco"
esearch -db pubmed -query "rubisco" | elink -related | elink -target protein | efilter -organism plant -feature cds | efetch -format fasta
